
{% macro item(label, badgeClass,ticketNumber, tabName, activeTab) %}

    <li class="{% if tabName == activeTab %}active{% endif %}">
        <a href="{{ path('miniteam_scrum_story_list', { 'project': app.user.selectedProject,'status':tabName }) }}" class="centered">
            {{ label }}
            <br>
            <span class="badge {% if ticketNumber >0 %}{{badgeClass}}{% endif %}">{{ ticketNumber }}</span>
        </a>
    </li>
{% endmacro %}

{% import _self as menu %}

<div class="row">
    <div class="span1">
        <div class="pagination pagination-large pagination-centered">
            <ul>
                <li class="{% if activeTab == 'home' %}active{% endif %}">
                    <a href="#" class="centered">
                        Home
                        <br>
                        <i class="icon-home"></i>
                    </a>
                </li>
            </ul>
        </div>
    </div>
        
    <div class="span10">
                    
        <div class="pagination pagination-large pagination-centered">
            <ul>
                {{ menu.item( 'Backlog','',nb_product_backlog,'product-backlog', activeTab) }}

                {{ menu.item( 'Sprint backlog', 'badge-warning',nb_sprint_backlog,'sprint-backlog',activeTab) }}
                
                {{ menu.item( 'Doing', 'badge-info',nb_doing,'doing',activeTab) }}
                
                {{ menu.item( 'Blocked', 'badge-important',nb_blocked,'blocked',activeTab ) }}
                
                {{ menu.item( 'To validate', 'badge-success',nb_to_validate,'to-validate',activeTab ) }}
                
                {{ menu.item( 'Done',  '',nb_done,'done',activeTab ) }}
            </ul>
        </div>

    </div>
    
    <div class="span1">
        <div class="pagination pagination-large">
            <ul>
                <li class="{% if activeTab == 'us' %}active{% endif %}">
                    <a href="#" class="centered">
                        User
                        <br>
                        Story
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>

